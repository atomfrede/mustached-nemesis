<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/my_account_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/card_background" >
        <TextView
            android:id="@+id/my_account_header"
            style="@style/CardTitleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_account_header" />
        <View
            android:id="@+id/seperator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/my_account_header"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/stroke"
            android:visibility="visible" />
        <TextView
            android:id="@+id/value"
            style="@style/CardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seperator"
            android:text="TextView" />
        <TextView
            android:id="@+id/mate_count"
            style="@style/CardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/value"
            android:text="TextView" />
    </RelativeLayout>
    <Button
        android:id="@+id/get_refreshed_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_consume" />
    <RelativeLayout
        android:id="@+id/available_mates_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/card_background" >
        <TextView
            android:id="@+id/available_mates_header"
            style="@style/CardTitleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_bottles_header" />
        <View
            android:id="@+id/seperator_2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/available_mates_header"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/stroke"
            android:visibility="visible" />
        <TextView
            android:id="@+id/available_mates"
            style="@style/CardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seperator_2"
            android:text="TextView" />
    </RelativeLayout>
</LinearLayout>